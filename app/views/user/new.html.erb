<div class="container pt-5">
    <h1>CrÃ©er un compte utilisateur</h1>

    <%# ALERTE %>
    <% flash.each do |type, msg| %>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
    <% end %>

    <%# FORMULAIRE %>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div class="form-group mt-3">
            <%= label_tag 'Email' %>
            <%= text_field_tag 'email', '', required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= label_tag 'Mot de passe' %>
            <%= text_field_tag 'password', '', required: true, class: 'form-control' %>
        </div>
        <%= submit_tag "Envoyer", class: 'btn btn-primary' %>
    <% end %>
</div>
