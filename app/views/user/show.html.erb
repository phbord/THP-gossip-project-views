<div class="container pt-5">
    <h1>Utilisateur</h1>
    <p class="mt-3"></p>
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">
                <%= User.find(params[:id]).first_name %>
                <%= User.find(params[:id]).last_name %>
            </h5>
            <div class="card-text">
                <p><%= User.find(params[:id]).describtion %></p>
                <p>Age : <%= User.find(params[:id]).age %></p>
            </div>
            <div class="mt-3">
                <%= link_to "Accueil", home_show_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>
