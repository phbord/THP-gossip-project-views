<div class="container pt-5">
    <h1>Utilisateur</h1>
    <p class="mt-3"></p>
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">
                <%= @user.first_name %>
                <%= @user.last_name %>
            </h5>
            <p class="card-text">
                <%= @user.describtion %>
            </p>
            <div class="card-text">
                Age : <%= @user.age %>
            </div>
            <div class="card-text">
                Ville : <%= @user.city.name %>
            </div>
            <div class="mt-3">
                <%= link_to "Ville", city_path(@user.city_id), class: "btn btn-success" %>
                <%= link_to "Accueil", gossips_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>
