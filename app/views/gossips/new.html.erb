<div class="container pt-5">
    <h1>Ajouter un potin</h1>

    <%# ALERTE %>
    <% flash.each do |type, msg| %>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
    <% end %>

    <%# FORMULAIRE %>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div class="form-group mt-3">
            <%= label_tag 'Titre' %>
            <%= text_field_tag 'title', '', required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= label_tag 'Contenu' %>
            <%= text_area_tag 'content', '', required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= label_tag 'Tags' %>
            <%= select_tag 'tag', options_from_collection_for_select(@tags, :id, :title), include_blank: "Sélectionner un tag", required: true, class: 'form-control' %>
            <%#= select_tag(:tag, options_for_select(@tags), include_blank: "Sélectionner un tag", class: 'form-control') %>
        </div>
        <%= submit_tag "Envoyer", class: 'btn btn-primary' %>
    <% end %>
</div>
