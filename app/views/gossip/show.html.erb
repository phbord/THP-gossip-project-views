            <h5 class="card-title"><%= Gossip.find(params[:id]).title %></h5>
            <div class="card-text"><%= Gossip.find(params[:id]).content %></div>
            <div class="card-text">cr√©e le <%= Gossip.find(params[:id]).created_at.strftime("%d/%m/%Y") %></div>
